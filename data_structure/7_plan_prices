-- creating table PLAN_PRICES
CREATE OR REPLACE TABLE PLAN_PRICES (
  PLAN_ID       STRING,          
  PRODUCT_NAME  STRING,
  UNIT_AMOUNT   NUMBER(18,0),    
  CURRENCY      CHAR(3),
  INTERVAL      STRING,          
  SORT_ORDER    NUMBER(5,0)
);

--LOAD .CSV TO THE TABLE
COPY INTO PLAN_PRICES
FROM @STG_RAW_FINANCE/plan_prices.csv
ON_ERROR = 'ABORT_STATEMENT';
